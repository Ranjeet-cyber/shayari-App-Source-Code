<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:id="@+id/card12"
    android:background="@drawable/back12"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="7dp">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@drawable/back11"
    android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/textViewCard"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:text="dummy_text"/>
    <ImageView
        android:id="@+id/copy"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:layout_marginRight="15dp"
        android:layout_gravity="bottom|right"
        android:textSize="20sp"
        android:src="@drawable/ic_baseline_file_copy_24"/>
    <ImageView
        android:id="@+id/fav"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:layout_marginRight="50dp"
        android:layout_gravity="bottom|center"
        android:textSize="20sp"
        android:background="@drawable/whatsapp"/>
    <ImageView
        android:id="@+id/share"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="bottom|left"
        android:textSize="20sp"
        android:src="@drawable/ic_baseline_share_24"/>
    <ImageView
        android:id="@+id/full"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:layout_marginLeft="50dp"
        android:layout_gravity="bottom|center"
        android:textSize="20sp"
        android:src="@drawable/ic_baseline_fullscreen_24"/>
    <ImageView
        android:id="@+id/buttonSwipeLeft1"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:layout_gravity="center|left"
        android:textSize="15dp"
        android:src="@drawable/ic_baseline_chevron_left_24"/>
    <ImageView
        android:id="@+id/buttonSwipeRight1"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center|right"
        android:textSize="15dp"
        android:src="@drawable/ic_baseline_navigate_next_24"/>
</androidx.cardview.widget.CardView>